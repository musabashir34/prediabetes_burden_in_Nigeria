
@article{abubakarPREVALENCECORRELATESDIABETES2012,
  title = {{{PREVALENCE AND CORRELATES OF DIABETES MELLITUS AND GLUCOSE INTOLERANCE AMONG ADULTS IN KANO METROPOLIS}}},
